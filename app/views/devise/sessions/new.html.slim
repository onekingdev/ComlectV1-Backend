= simple_form_for resource, remote: true, as: resource_name, url: session_path(resource_name), html: { class: 'new_session' } do |f|
  a.btn.btn-block.btn-lg.btn-primary.btn-social-linkedin href="#"
    .fa.fa-linkedin-square.fz-1-5x
    span Log in with LinkedIn

  .m-y-2.text-center or

  = f.input :email, autofocus: true, label: false, input_html: { class: 'input-lg text-center' }
  = f.input :password, label: false, input_html: { class: 'input-lg text-center' }

  - if flash[:warning]
    .alert.alert-warning= flash[:warning]

  button.btn.btn-primary.btn-block.btn-lg type="submit" Log In

  .text-center.m-t-1= link_to "Forgot Password", new_password_path(resource_name), remote: true

  hr.flush

  h3.text-center.m-t-3.m-b-2 New to Complect? Sign up as a:

  .row
    .col-xs-6
      = link_to 'Business', new_business_path, class: 'btn btn-lg btn-block btn-primary'
    .col-xs-6
      = link_to 'Specialist', '#', class: 'btn btn-lg btn-block btn-primary'
