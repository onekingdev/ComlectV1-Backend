var $modal = $('#js-specialist-account-type-popup');
var modalContent = '<%= j render 'popup' %>';
if ($modal.length > 0) {
  $modal
    .find('.modal-body').replaceWith($(modalContent).find('.modal-body')).end()
    .modal('show');
} else {
  $('body').append(modalContent);
  $('#js-specialist-account-type-popup').modal('show')
}

$(document).trigger('newContent', $('#js-specialist-account-type-popup'));
