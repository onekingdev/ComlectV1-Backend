var $modal = $('#js-project-rating');
var modalContent = '<%= j render('new', rating: @rating) %>';
if ($modal.length > 0) {
  $modal
    .find('form').replaceWith($(modalContent).find('form')).end()
    .modal({'backdrop': true, 'show': true});
} else {
  $('body').append(modalContent);
  $('#js-project-rating').modal({'backdrop': true, 'show': true})
}

$(document).trigger('newContent', $('#js-project-rating'));
