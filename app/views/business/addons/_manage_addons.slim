.panel.panel-default.profile-info.m-b-2
  .panel-heading
    .pull-left
      h3 Manage Add-ons

    .clearfix
  hr.m-b-0.m-t-1
  .panel-content-wrapper class=("fixedheight_receiver" if ["business_dashboard", "specialists/dashboard"].include?(params[:controller])) style="min-height: 300px;"
    .clearfix
    - if current_business && current_business.forum_subscription || current_specialist
      .pull-left style="line-height: 28px;" Q&A Forum 
      .pull-right = link_to "Open", "/ask-a-specialist", target: "_blank", class: "btn btn-primary btn-sm p-x-2"
      .clearfix
    - else
      h2.text-center NO ADD-ONS
