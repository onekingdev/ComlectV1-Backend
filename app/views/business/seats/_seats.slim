.panel.panel-default.m-b-0 class=("fixedheight" if params[:controller] == "business/seats")
  .panel-heading
    .pull-left
      h3 Seats
    .pull-right 
      .seats_info.m-l-2 style="margin-top: -10px; height: 1px;"
        h3 #{@seats_available} Available
        .progress.m-b-0 style="margin-top: -6px;"
          .progress-bar role="progressbar" aria-valuenow="#{@seats_taken}" aria-valuemin="0" aria-valuemax="#{@seats_total}"
        | #{@seats_taken} of #{@seats_total} assigned
    - if params[:controller] == "business/seats"
      .pull-right style="width: 184px;"
        - pth = current_business ? new_business_seat_path : new_specialists_business_seat_path(@business.username)
        /.btn.btn-primary.btn-solid.m-r-3 style="padding: 9px 10px;" Purchase
        = link_to "Purchase", pth, "data-target": "#modal", "data-toggle": "modal", "data-remote": true, class: "btn btn-primary btn-solid m-r-3 p-y-0", style: "padding: 9px 10px;"
    .clearfix
  hr.m-b-0.m-t-1
  .panel-content-wrapper style="height: 300px;" class=("fullheight" if params[:controller] == "business_dashboard")
    table.table.table-striped.table-blue
      thead
        tr
          th Name
          th Title
          th Department
          - if params[:controller] == "business/seats"
            th style="width: 1px;" &nbsp;
      tbody
        - @assigned_team_members&.each do |employee|
          tr
            td= employee.full_name
            td= employee.title
            td= employee.team.display? ? employee.team&.name : '' if employee.team.present?
            - if params[:controller] == "business/seats"
              td style="width: 1px; font-size: 18px;"
                = link_to business_seat_unassign_path(seat_id: employee.id), method: :delete, data: { confirm: "<div class='bootbox-heading'>Revoke Seat<hr></div>This will remove seat access from this employee.", "confirm-label": "Confirm", "no-cancel": "true" } do
                  i.icon-trash
