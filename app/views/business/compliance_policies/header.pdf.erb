<html>
  <head>
    <style type="text/css">
        @font-face {
            font-family: 'Canela';
            src: url('<%= Rails.root.join("public", "fonts", "Canela-Medium.otf") %>') format('opentype');
        }

        @font-face {
            font-family: 'Canela Bold';
            src: url('<%= Rails.root.join("public", "fonts", "Canela-Bold.otf") %>') format('opentype');
        }
        @font-face {
            font-family: 'Canela Black';
            src: url('<%= Rails.root.join("public", "fonts", "Canela-Black.otf") %>') format('opentype');
        }

        @font-face {
            font-family: 'open sans bold';
            src: url('<%= Rails.root.join("public", "fonts", "OpenSans-Bold.ttf") %>') format('opentype');
        }

        @font-face {
            font-family: 'open sans regular';
            src: url('<%= Rails.root.join("public", "fonts", "OpenSans-Regular.ttf") %>') format('opentype');
        }
      body, html, table {
        font-size: 12px;
        padding: 0px;
        margin: 0px;
        width: 273mm;
        overflow: hidden;
        font-family: "Open Sans";
      }

      p { page-break-inside: avoid; font-size: 12px; word-wrap: break-word; }
      .page {
        page-break-before:always;
        width: 273mm;
        position: relative;
        clear: both;
      }
    </style>
    <meta charset="UTF-8">
  </head>
  <body>
    <div class="container page">
      <center style="padding-top: 300px;">
        <h3><%= image_tag(logo, height: "300px") if logo.present? %></h3>
        <br/>
        <br/>
        <h1 style="padding-bottom: 0px; margin-bottom: 0px;"><big><%= cpolicy.business.name %></big></h1>
        <h2 style="padding-top: 0px; margin-top: 0px; font-size: 22px;">Compliance Manual</h2>
        <h3 style="font-weight: 400;">Last updated: <%= last_updated.strftime("%B %d, %Y") %></h3>
        <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
        <% if cpconf.address %>
          <p><%= cpolicy.business.zipcode %> <%= cpolicy.business.address_1 %> <%= cpolicy.business.address_2 %> <%= cpolicy.business.apartment %></p>
        <% end %>
        <% if cpconf.phone %>
          <p><%= cpolicy.business.contact_phone %></p>
        <% end %>
        <% if cpconf.email %>
          <p><%= cpolicy.business.user.email %></p>
        <% end %>
      </center>
      <div style="position: fixed; bottom: 0px; width: 100%;">
        <div><%= cpconf.body if cpconf.disclosure %></div>
      </div>
    </div>
  </body> 
</html>