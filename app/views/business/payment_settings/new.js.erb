<% if @payment_source.errors.any? %>
$('#new_payment_source_ach')
  .find('.alert-danger').text('<%= j @payment_source.errors.full_messages.to_sentence %>').removeClass('hidden');
<% else %>
_Modal.showPlain('<%= j render 'choose_verification_method' %>');
<% end %>
$(".settings-nav > li").removeClass("active");
$(".settings-nav > .payment-details").addClass("active");