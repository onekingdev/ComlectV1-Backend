var $modal = $('#js-project-hire');
var modalContent = '<%= j render('new') %>';
if ($modal.length > 0) {
  $modal
    .find('.modal-body').replaceWith($(modalContent).find('.modal-body')).end()
    .modal('show');
} else {
  $('body').append(modalContent);
  $('#js-project-hire').modal('show')
}

$(document).trigger('newContent', $('#js-project-hire'));
