var $content = $('.panel-drawer.timesheets');
$content.html('<%= j render 'timesheets', timesheets: @timesheets, selected: @timesheet %>');
$('.timesheets .timesheet.selected').removeClass('selected');
var id = $('.selected-timesheet').attr('data-id');
if (id) {
  $('.timesheets .timesheet[data-id=' + id + ']').addClass('selected');
} else {
  $('.timesheets .timesheet.new-timesheet').addClass('selected');
}
$(document).trigger('newContent', $content);
