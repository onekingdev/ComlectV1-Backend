var $modal = $('#js-project-share');
var modalContent = '<%= j render('new', share: @share) %>';
if ($modal.length > 0) {
  $modal
    .find('.modal-body').replaceWith($(modalContent).find('.modal-body')).end()
    .find('.modal-header').replaceWith($(modalContent).find('.modal-header')).end()
    .modal('show');
} else {
  $('body').append(modalContent);
  $('#js-project-share').modal('show')
}

$(document).trigger('newContent', $('#js-project-share'));
