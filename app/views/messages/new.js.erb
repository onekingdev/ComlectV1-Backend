var $modal = $('#js-new-message');
var modalContent = '<%= j render 'new', message: @message %>';
if ($modal.length > 0) {
  $modal
    .find('.modal-body').replaceWith($(modalContent).find('.modal-body')).end()
    .modal('show');
} else {
  $('body').append(modalContent);
  $('#js-new-message').modal('show')
}

$(document).trigger('newContent', $('#js-new-message'));
