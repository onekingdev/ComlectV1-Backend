<% if @favorite.persisted? %>
$('[data-<%= @favorite.favorited.class.name.underscore.dasherize %>-id=<%= @favorite.favorited_id %>]')
  .find('.card, .tool-icon.favorite').addClass('active').end();
<% elsif @remove %>
$('[data-<%= @favorite.favorited.class.name.underscore.dasherize %>-id=<%= @favorite.favorited_id %>]').remove();
<% else %>
$('[data-<%= @favorite.favorited.class.name.underscore.dasherize %>-id=<%= @favorite.favorited_id %>]')
  .find('.card, .tool-icon.favorite').removeClass('active').end();
<% end %>
