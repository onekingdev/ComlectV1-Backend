<% if @favorite.persisted? %>
$('[data-<%= @favorite.favorited.class.name %>-id=<%= @favorite.favorited_id %>]')
  .find('.card, .favourite').addClass('active').end();
<% else %>
$('[data-<%= @favorite.favorited.class.name %>-id=<%= @favorite.favorited_id %>]')
  .find('.card, .favourite').removeClass('active').end();
<% end %>
